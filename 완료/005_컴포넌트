  {({ formattedAmount, statusColor, isHealthy }) => (
    <div style={{ color: statusColor }}>
      {isHealthy ? 'âœ…' : 'âš ï¸'} {formattedAmount}
    </div>
  )}
</RenderTokenWidget>
